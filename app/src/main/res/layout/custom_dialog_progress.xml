<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center"
    android:layout_gravity="center|top"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_20dp"
        android:background="@drawable/rounded_bg_10dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/textDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_loading"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginRight="@dimen/spacing_20dp"
            android:layout_marginLeft="@dimen/spacing_10dp"
            android:textColor="@color/grey_darker"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/loading"
            />

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/loading"
            style="@style/SpinKitView.Small.FadingCircle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/color_primary_dark"
            android:layout_centerVertical="true"
            tools:ignore="MissingClass" />

    </RelativeLayout>


</RelativeLayout>