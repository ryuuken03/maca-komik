<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_adapter_spinner_custom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/spacing_15dp"
        android:paddingBottom="@dimen/spacing_15dp"
        >

        <TextView
            android:id="@+id/title"
            android:layout_toLeftOf="@+id/iconCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/grey_darker"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/iconCheck"
            android:layout_width="@dimen/icon_20dp"
            android:layout_height="@dimen/icon_20dp"
            android:layout_marginLeft="@dimen/spacing_10dp"
            android:layout_alignParentRight="true"
            app:tint="@color/grey_darker"
            android:visibility="gone"
            android:src="@drawable/ic_fi_check"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"
        android:layout_below="@+id/top"
        />


</RelativeLayout>