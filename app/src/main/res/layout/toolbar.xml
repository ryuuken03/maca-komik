<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbarCustomWhite"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/white"
    android:minHeight="?attr/actionBarSize"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_baseline_chevron_left_24"
        android:layout_marginLeft="@dimen/spacing_5dp"
        />
    <TextView
        android:id="@+id/title"
        android:layout_toRightOf="@+id/btnBack"
        android:layout_toLeftOf="@+id/btnAddBookmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/spacing_10dp"
        android:layout_marginRight="@dimen/spacing_10dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/grey_darker"
        android:textSize="@dimen/text_size_big"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/btnAddBookmark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_marginLeft="@dimen/spacing_5dp"
        />

    <TextView
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:text="Simpan"
        android:textStyle="bold"
        android:padding="5dp"
        android:textSize="@dimen/text_size_normal"
        android:layout_marginRight="@dimen/spacing_15dp"
        android:textColor="@color/black"
        />

</RelativeLayout>