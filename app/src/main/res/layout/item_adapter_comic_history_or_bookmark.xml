<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_adapter_comic_history_or_bookmark"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="1dp"
        android:background="@drawable/rounded_bg_4dp_with_line_white">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:scaleType="center"
            />
        <TextView
            android:id="@+id/number"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="gone"
            android:background="@drawable/circle_background_primary"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_super_small"
            android:textStyle="bold"
            android:layout_margin="2dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <RelativeLayout
            android:id="@+id/layoutData"
            android:layout_toRightOf="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/title"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=""
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/genre"
                android:layout_below="@+id/title"
                android:layout_marginTop="@dimen/spacing_5dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:text=""
                />
            <TextView
                android:id="@+id/type"
                android:layout_below="@+id/genre"
                android:layout_marginTop="2dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:text=""
                />
            <TextView
                android:id="@+id/source"
                android:layout_below="@+id/type"
                android:layout_marginTop="2dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:text=""
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/layoutData"
            android:layout_toRightOf="@+id/photo"
            android:id="@+id/layoutChapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center">
            <!--        android:paddingLeft="10dp"-->
            <!--        android:paddingRight="10dp"-->
            <TextView
                android:id="@+id/chapter"
                android:layout_toLeftOf="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_small"/>
            <ImageView
                android:id="@+id/delete"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:src="@drawable/ic_baseline_delete_24"
                app:tint="@color/white"
                />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>