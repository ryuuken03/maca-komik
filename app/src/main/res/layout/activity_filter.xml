<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.ListFilterActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_filter" />

    <View
        android:id="@+id/lineToolbar"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_2dp"
        android:background="@drawable/shadow" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lineToolbar"
        android:background="@color/grey_darker">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <RelativeLayout
                android:id="@+id/layoutType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/labelType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Jenis"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_small"/>
                <Spinner
                    android:id="@+id/inputType"
                    android:layout_below="@+id/labelType"
                    android:layout_toLeftOf="@+id/iconDown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textSize="@dimen/text_size_normal"/>

                <ImageView
                    android:id="@+id/iconDown"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_5dp"
                    android:padding="3dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_arrow_drop_down_24"
                    android:tint="@color/white"
                    />
                <View
                    android:id="@+id/line"
                    android:layout_below="@+id/inputType"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="@dimen/spacing_1dp"
                    android:background="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutSort"
                android:layout_below="@+id/layoutType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/labelSort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Urutkan"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_small"/>
                <Spinner
                    android:id="@+id/inputSort"
                    android:layout_below="@+id/labelSort"
                    android:layout_toLeftOf="@+id/iconDown2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textSize="@dimen/text_size_normal"/>

                <ImageView
                    android:id="@+id/iconDown2"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_5dp"
                    android:padding="3dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_arrow_drop_down_24"
                    android:tint="@color/white"
                    />
                <View
                    android:id="@+id/line2"
                    android:layout_below="@+id/inputSort"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="@dimen/spacing_1dp"
                    android:background="@color/white" />
            </RelativeLayout>
            <TextView
                android:id="@+id/labelGenre"
                android:layout_below="@+id/layoutSort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:text="Genre"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"/>
            <TextView
                android:id="@+id/textGenre"
                android:layout_below="@+id/labelGenre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Pilih Genre"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"/>
            <ImageView
                android:id="@+id/iconDown3"
                android:layout_below="@+id/labelGenre"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_5dp"
                android:layout_marginRight="8dp"
                android:padding="3dp"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"
                android:tint="@color/white"
                />
            <ImageView
                android:id="@+id/iconUp3"
                android:layout_below="@+id/labelGenre"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/spacing_5dp"
                android:layout_marginRight="8dp"
                android:padding="3dp"
                android:src="@drawable/baseline_arrow_drop_up_24"
                android:tint="@color/white"
                />
            />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/revListGenre"
                android:layout_below="@+id/textGenre"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:overScrollMode="always" />
            <View
                android:id="@+id/line3"
                android:layout_below="@+id/revListGenre"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_height="@dimen/spacing_1dp"
                android:background="@color/white" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>