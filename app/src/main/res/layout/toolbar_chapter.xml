<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbarCustomWhite"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/white"
    android:minHeight="?attr/actionBarSize"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_baseline_chevron_left_24"
        android:layout_marginLeft="@dimen/spacing_5dp"
        android:textColor="@color/grey_darker"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/spacing_5dp"
        android:layout_toRightOf="@+id/btnBack"
        android:layout_toLeftOf="@+id/btnAddBookmark">
        <TextView
            android:id="@+id/title"
            android:layout_toLeftOf="@+id/chapterPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_10dp"
            android:layout_marginRight="@dimen/spacing_10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/grey_darker"
            android:textSize="@dimen/text_size_super_normal"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/chapterPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_10dp"
            android:layout_marginRight="@dimen/spacing_10dp"
            android:visibility="gone"
            android:padding="8dp"
            android:background="@drawable/rounded_bg_8dp_with_line_grey"
            android:textColor="@color/grey_darker"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/btnAddBookmark"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="5dp"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_marginLeft="@dimen/spacing_5dp"
        />
</RelativeLayout>