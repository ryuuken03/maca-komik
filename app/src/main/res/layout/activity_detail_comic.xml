<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_darker"
    tools:context=".activity.DetailComicActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <View
        android:id="@+id/line"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_2dp"
        android:background="@drawable/shadow" />
    <ProgressBar
        android:id="@+id/progress"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line">
        <RelativeLayout
            android:id="@+id/layoutData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:padding="10dp">
            <RelativeLayout
                android:id="@+id/layoutComic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@color/white"
                    android:gravity="center_vertical"
                    android:scaleType="center"
                    />
                <TextView
                    android:id="@+id/titlePage"
                    android:layout_toRightOf="@+id/photo"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_super_normal"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/genre"
                    android:layout_below="@+id/titlePage"
                    android:layout_toRightOf="@+id/photo"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fantasy,Comedy"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"/>
                <TextView
                    android:id="@+id/type"
                    android:layout_below="@+id/genre"
                    android:layout_toRightOf="@+id/photo"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type : Manhwa"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"/>
                <TextView
                    android:id="@+id/release"
                    android:layout_below="@+id/type"
                    android:layout_toRightOf="@+id/photo"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Released : 2021"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/layoutComic"
                android:id="@+id/layoutNavControll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/pageAll"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/rounded_bg_4dp_red_dark"
                    android:backgroundTint="@color/white"
                    android:text="Semua Chapter"
                    android:textColor="@color/grey_darker"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_small"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@+id/layoutNavControll"
                android:id="@+id/revListData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:overScrollMode="always" />
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>